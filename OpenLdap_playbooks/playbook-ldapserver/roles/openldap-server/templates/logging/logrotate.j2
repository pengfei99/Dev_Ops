# Rotate log files generated by OpenLDAP
{{ slapd_log_dir }}/{{ slapd_log_file }} {
    missingok
    notifempty
    compress
    weekly
    rotate 10
    size=50M
    sharedscripts
    postrotate
    # OpenLDAP logs via syslog, restart syslog if running
    /etc/init.d/rsyslog restart
    endscript
}